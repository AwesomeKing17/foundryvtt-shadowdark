<div class="slots">
	<label>{{localize 'SHADOWDARK.inventory.slots'}}</label>
	<div class="slots-box">
		<input
			type="number"
			value="{{slotsUsed}}"
			class="slots-value"
			{{#ifCond slotsUsed '>' actor.system.slots}}
				style="color: red;"
			{{/ifCond}}
			disabled
		>
		<label>{{localize 'SHADOWDARK.inventory.slots_used'}}</label>
	</div>
	<div class="slots-box">
		{{numberInput
			actor.system.slots
			name="system.slots"
			class="slots-value"
		}}
		<label>{{localize 'SHADOWDARK.inventory.slots_max'}}</label>
	</div>
</div>
