<form class="{{cssClass}}" autocomplete="off">
	<header class="item-header">
		<img
			src="{{ item.img }}"
			data-edit="img"
			title="{{ item.name }}"
			height="64"
			width="64"
		/>
		<h1>
			<input
				class="item-name"
				name="name"
				type="text"
				value="{{ item.name }}"
				placeholder="{{ localize 'Name' }}"
			/>
		</h1>
	</header>
	<section class="item-body">
		{{> systems/shadowdark/templates/items/partials/cost.hbs }}
	</section>
</form>
