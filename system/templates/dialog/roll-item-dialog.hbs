<form autocomplete="off" spellcheck="off">
  <h2>{{localize "SHADOWDARK.dialog.ItemRoll.Title"}} {{ data.item.name }}</h2>
  <hr />

  <div class="form-group">
    <label>
      {{localize "SHADOWDARK.dialog.ItemRoll.ItemBonus"}}
    </label>
    <input type="number" name="item-bonus" value="{{#ifNeq 0 data.item.system.attackBonus }}{{ data.item.system.attackBonus }}{{/ifNeq}}" placeholder="0">
  </div>
  <div class="form-group">
    <label>
      {{localize "SHADOWDARK.dialog.ItemRoll.AbilityBonus"}}
    </label>
    <input type="number" name="ability-bonus" value="{{ data.bonus }}" placeholder="0">
  </div>
  <div class="form-group">
    <label>
      {{localize "SHADOWDARK.dialog.ItemRoll.TalentBonus"}}
    </label>
    <input type="number" name="talent-bonus" value="{{ data.talents }}" placeholder="0">
  </div>
  <hr />

  <div class="form-group">
    <label>{{localize "SHADOWDARK.dialog.RollModeLabel"}}</label>
    <select name="rollMode">
      {{#select rollMode}}
        {{#each rollModes as |label mode|}}
          <option value="{{mode}}">{{localize label}}</option>
        {{/each}}
      {{/select}}
    </select>
  </div>
</form>